<h1>Reviews#show</h1>

<%= link_to "Back to Product", product_path(@product) %> | <%= link_to "Edit", edit_product_review_path %> | 

<%= link_to "Delete", @reviews, :confirm => "Are you sure you want to delete this item?", :method => :delete %>


<p>Review for: <%= @product.name %></p>

    <div class="review">
      <p> 
          <%= @review.comment %>
          <br>
            <em> By <%= @review.user.email %></em>
            <em>Added on:</em> <%= @review.created_at %>
      </p>
    </div>